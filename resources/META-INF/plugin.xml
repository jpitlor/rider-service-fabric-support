<idea-plugin>
  <id>dev.pitlor.rider-service-fabric-support</id>
  <name>Service Fabric for Rider</name>
  <version>1.0</version>
  <vendor email="jordan@pitlor.dev" url="https://www.pitlor.dev">Jordan Pitlor</vendor>

  <description><![CDATA[
      Adds support for deploying, removing, and debugging Azure Service Fabric applications to a local cluster
    ]]></description>

  <change-notes><![CDATA[
      Initial release
    ]]>
  </change-notes>

  <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="203.5981.155" />

  <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.platform</depends>

  <extensions defaultExtensionNs="com.intellij">
    <programRunner implementation="dev.pitlor.rider_service_fabric_support.program_runners.ServiceFabricProgramDebugger" />
    <programRunner implementation="dev.pitlor.rider_service_fabric_support.program_runners.ServiceFabricProgramRunner" />
    <runConfigurationProducer implementation="dev.pitlor.rider_service_fabric_support.run_configuration.ServiceFabricRunConfigurationProducer" />
    <configurationType implementation="dev.pitlor.rider_service_fabric_support.run_configuration.ServiceFabricRunConfigurationType" />
    <fileType
        name="Service Fabric Configuration"
        language="XML"
        extensions="sfproj"
        implementationClass="dev.pitlor.rider_service_fabric_support.file_types.ServiceFabricFileType"
    />
  </extensions>

